<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/login.css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/users.js"></script>
    <script defer src="/scripts/login.js"></script>
    <script defer src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <main class="login-main">
      <h2>Login</h2>
      <form method="POST" action="/login">
        <label class="hide" for="username" aria-label="enter username"
          >Username</label
        >
        <input
          class="form-input"
          type="username"
          name="username"
          id="username"
          aria-describedby="usernameHelp"
          placeholder="Enter Username"
        />
        <label class="hide" for="password" aria-label="enter password"
          >Password</label
        >
        <input
          class="form-input"
          type="password"
          name="password"
          id="password"
          placeholder="Enter Password"
        />
        <button type="submit" class="login-btn">Submit</button>
      </form>
    </main>
  </body>
</html>
